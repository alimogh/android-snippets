<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/radius_custom_button" />

            <solid android:color="#6650C0E9" />
        </shape>
    </item>
    <item
        android:left="4dp"
        android:top="4dp"
        android:right="4dp"
        android:bottom="4dp">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/radius_custom_button" />

            <gradient
                android:angle="270"
                android:endColor="#FF999999"
                android:startColor="#FFCCCCCC" />
        </shape>
    </item>
    <item
        android:left="4dp"
        android:top="4dp"
        android:right="4dp"
        android:bottom="4dp">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/radius_custom_button" />

            <gradient
                android:angle="270"
                android:endColor="#FFCCCCCC"
                android:startColor="#FFFFFFFF" />

            <stroke
                android:width="@dimen/stroke_width_custom_button_default"
                android:color="#00000000" />
        </shape>
    </item>
    <item
        android:left="4dp"
        android:top="4.5dp"
        android:right="4dp"
        android:bottom="4dp">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/radius_custom_button" />

            <gradient
                android:angle="270"
                android:endColor="#FFCCCCCC"
                android:startColor="#FFF6F6F6" />

            <stroke
                android:width="@dimen/stroke_width_custom_button_default"
                android:color="#00000000" />
        </shape>
    </item>
    <item
        android:left="4dp"
        android:top="4dp"
        android:right="4dp"
        android:bottom="4dp">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/radius_custom_button" />

            <solid android:color="#9933B5E5" />
        </shape>
    </item>

</layer-list>
