<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item>
        <shape android:shape="rectangle" >
            <corners android:radius="@dimen/radius_custom_button" />

            <gradient
                android:angle="270"
                android:endColor="#FF777777"
                android:startColor="#FF999999" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle" >
            <corners android:radius="@dimen/radius_custom_button" />

            <gradient
                android:angle="270"
                android:endColor="#00FFFFFF"
                android:startColor="#CC666666" />

            <stroke
                android:width="@dimen/stroke_width_custom_button_default"
                android:color="#00000000" />
