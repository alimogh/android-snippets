<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item
        android:left="4dp"
        android:top="4dp"
        android:right="4dp"
        android:bottom="4dp">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/radius_custom_button" />

            <gradient
                android:angle="270"
                android:endColor="#FF000000"
                android:startColor="#FF444444" />
        </shape>
    </item>
    <item
        android:left="4dp"
        android:top="4dp"
        android:right="4dp"
        android:bottom="4dp">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/radius_custom_button" />

            <gradient
                android:angle="270"
                android:endColor="#FF090909"
                android:startColor="#FF666666" />

            <stroke
                android:width="@dimen/stroke_width_custom_button_default"
                android:color="#00000000" />
        </shape>
    </item>
    <item
        android:left="4dp"
        android:top="4.5dp"
        android:right="4dp"
        android:bottom="4dp">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/radius_custom_button" />

            <gradient
                android:angle="270"
                android:endColor="#FF090909"
                android:startColor="#FF333333" />

            <stroke
                android:width="@dimen/stroke_width_custom_button_default"
                android:color="#00000000" />
        </shape>
    </item>

</layer-list>