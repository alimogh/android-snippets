        android:bottom="0.5dp">
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#8AD5F0"
                android:endColor="#33B5E5"
                android:angle="270"
                android:type="linear" />
        </shape>
    </item>

</layer-list>