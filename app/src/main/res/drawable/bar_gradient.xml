<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape android:shape="rectangle">
            <solid android:color="#A8DFF4" />
        </shape>
    </item>
    <item android:top="0.5dp">
        <shape android:shape="rectangle">
            <solid android:color="#0099CC" />
        </shape>
