<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/space_border">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <View
                    android:id="@+id/img1_small"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:background="@drawable/progress" />

                <View
                    android:id="@+id/img1_medium"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:background="@drawable/progress" />

                <View
                    android:id="@+id/img1_large"
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    android:background="@drawable/progress" />

                <View
                    android:id="@+id/img2"
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    android:background="@drawable/progress_red" />

                <View
                    android:id="@+id/img3"
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    android:background="@drawable/progress_blue" />

                <View
                    android:id="@+id/img4"
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    android:background="@drawable/progress_green" />

                <View
                    android:id="@+id/img5"
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    android:background="@drawable/progress_yellow" />

                <View
                    android:id="@+id/img6"
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    android:background="@drawable/progress_purple" />
            </LinearLayout>
            <LinearLayout
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <View
                    android:id="@+id/img1_small_ccw"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:background="@drawable/progress_counter_clockwise" />

                <View
                    android:id="@+id/img1_medium_ccw"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:background="@drawable/progress_counter_clockwise" />

                <View
                    android:id="@+id/img1_large_ccw"
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    android:background="@drawable/progress_counter_clockwise" />

                <View
                    android:id="@+id/img2_ccw"
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    android:background="@drawable/progress_counter_clockwise_red" />

                <View
                    android:id="@+id/img3_ccw"
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    android:background="@drawable/progress_counter_clockwise_blue" />

                <View
                    android:id="@+id/img4_ccw"
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    android:background="@drawable/progress_counter_clockwise_green" />

                <View
                    android:id="@+id/img5_ccw"
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    android:background="@drawable/progress_counter_clockwise_yellow" />

                <View
                    android:id="@+id/img6_ccw"
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    android:background="@drawable/progress_counter_clockwise_purple" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</ScrollView>