        <EditText
            android:id="@+id/et22"
            style="@style/EditText"
            android:layout_marginTop="@dimen/space_elements"
            android:hint="textPhonetic"
            android:inputType="textPhonetic" />

        <EditText
            android:id="@+id/et23"
            style="@style/EditText"
            android:layout_marginTop="@dimen/space_elements"
