        <EditText
            android:id="@+id/et26"
            style="@style/EditText"
            android:layout_marginTop="@dimen/space_elements"
            android:hint="numberSigned"
            android:inputType="numberSigned" />

        <EditText
            android:id="@+id/et27"
            style="@style/EditText"
            android:layout_marginTop="@dimen/space_elements"
            android:hint="numberDecimal"
            android:inputType="numberDecimal" />

        <EditText
            android:id="@+id/et28"
            style="@style/EditText"
            android:layout_marginTop="@dimen/space_elements"
            android:hint="numberPassword"
            android:inputType="numberPassword" />

        <EditText
            android:id="@+id/et29"
            style="@style/EditText"
            android:layout_marginTop="@dimen/space_elements"
            android:hint="phone"
            android:inputType="phone" />

        <EditText
            android:id="@+id/et30"
            style="@style/EditText"
            android:layout_marginTop="@dimen/space_elements"
            android:hint="datetime"
            android:inputType="datetime" />

        <EditText
            android:id="@+id/et31"
            style="@style/EditText"
            android:layout_marginTop="@dimen/space_elements"
            android:hint="date"
            android:inputType="date" />

        <EditText
            android:id="@+id/et32"
            style="@style/EditText"
            android:layout_marginTop="@dimen/space_elements"
            android:hint="time"
            android:inputType="time" />

    </LinearLayout>

</ScrollView>