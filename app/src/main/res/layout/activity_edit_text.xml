<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/space_border">

        <EditText
            android:id="@+id/et1"
            style="@style/EditText"
            android:hint="none"
            android:inputType="none" />

        <EditText
            android:id="@+id/et2"
            style="@style/EditText"
            android:layout_marginTop="@dimen/space_elements"
            android:hint="text"
            android:inputType="text" />

        <EditText
            android:id="@+id/et3"
            style="@style/EditText"
            android:layout_marginTop="@dimen/space_elements"
            android:hint="textCapCharacters"
            android:inputType="textCapCharacters" />

        <EditText
            android:id="@+id/et4"
            style="@style/EditText"
            android:layout_marginTop="@dimen/space_elements"
            android:hint="textCapWords"
            android:inputType="textCapWords" />

        <EditText
            android:id="@+id/et5"
            style="@style/EditText"
            android:layout_marginTop="@dimen/space_elements"
            android:hint="textCapSentences"
            android:inputType="textCapSentences" />

        <EditText
            android:id="@+id/et6"
            style="@style/EditText"
            android:layout_marginTop="@dimen/space_elements"
            android:hint="textAutoCorrect"
            android:inputType="textAutoCorrect" />

        <EditText
            android:id="@+id/et7"
            style="@style/EditText"
            android:layout_marginTop="@dimen/space_elements"
            android:hint="textAutoComplete"
            android:inputType="textAutoComplete" />

        <EditText
            android:id="@+id/et8"
            style="@style/EditText"
            android:layout_marginTop="@dimen/space_elements"
            android:hint="textMultiLine"
            android:inputType="textMultiLine" />

        <EditText
            android:id="@+id/et9"
            style="@style/EditText"
            android:layout_marginTop="@dimen/space_elements"
            android:hint="textImeMultiLine"
            android:inputType="textImeMultiLine" />

        <EditText
            android:id="@+id/et10"
            style="@style/EditText"
            android:layout_marginTop="@dimen/space_elements"
            android:hint="textNoSuggestions"
            android:inputType="textNoSuggestions" />

        <EditText
            android:id="@+id/et11"
            style="@style/EditText"
            android:layout_marginTop="@dimen/space_elements"
            android:hint="textUri"
            android:inputType="textUri" />

        <EditText
            android:id="@+id/et12"
            style="@style/EditText"
            android:layout_marginTop="@dimen/space_elements"
            android:hint="textEmailAddress"
            android:inputType="textEmailAddress" />

        <EditText
            android:id="@+id/et13"
            style="@style/EditText"
            android:layout_marginTop="@dimen/space_elements"
