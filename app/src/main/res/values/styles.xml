<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="AppTheme" parent="android:Theme.Light">
        <item name="viStyles">@style/CustomViewIndicator</item>
    </style>

    <style name="AppThemeDark" parent="android:Theme.Black" />

    <style name="Theme.Transparent" parent="android:style/Theme.Translucent">
        <item name="android:windowBackground">@drawable/translucent</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="Button" parent="android:style/Widget.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">@dimen/height_element</item>
        <item name="android:textColor">@drawable/button_text_color</item>
        <item name="android:background">@drawable/button</item>
        <item name="android:shadowColor">#CC999999</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">-1</item>
        <item name="android:shadowRadius">2</item>
    </style>

    <style name="Button.Green">
        <item name="android:background">@drawable/button_green</item>
    </style>

    <style name="Button.Red">
        <item name="android:background">@drawable/button_red</item>
    </style>

    <style name="Button.Purple">
        <item name="android:background">@drawable/button_purple</item>
    </style>

    <style name="Button.Yellow">
        <item name="android:background">@drawable/button_yellow</item>
    </style>

    <style name="Button.Red2">
        <item name="android:background">@drawable/button_red2</item>
    </style>

    <style name="Button.Inverse">
        <item name="android:background">@drawable/button_inverse</item>
        <item name="android:textColor">#FF333333</item>
    </style>

    <style name="Button.Darken">
        <item name="android:background">@drawable/button_darken</item>
    </style>

    <style name="Button.Light">
        <item name="android:background">@drawable/button_light</item>
        <item name="android:textColor">#333333</item>
    </style>

    <style name="Button.Black">
        <item name="android:background">@drawable/button_black</item>
        <item name="android:textColor">#CCCCCC</item>
    </style>

    <style name="Button.Recessed">
        <item name="android:background">@drawable/button_recessed</item>
        <item name="android:textColor">#FF333333</item>
    </style>

    <style name="UITable">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/uitable</item>
        <item name="android:minHeight">@dimen/height_element</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="UITable.Top">
        <item name="android:background">@drawable/uitable_top</item>
        <item name="android:layout_marginTop">@dimen/margin_top_uitable_rows</item>
    </style>

    <style name="UITable.Middle">
        <item name="android:background">@drawable/uitable_middle</item>
        <item name="android:layout_marginTop">@dimen/margin_top_uitable_rows</item>
    </style>

    <style name="UITable.Bottom">
        <item name="android:background">@drawable/uitable_bottom</item>
        <item name="android:layout_marginTop">@dimen/margin_top_uitable_rows</item>
    </style>

    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.5dp</item>
        <item name="android:background">#CC666666</item>
    </style>

    <style name="Divider.White">
        <item name="android:background">#FFFFFFFF</item>
    </style>

    <style name="Row">
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">4dp</item>
        <item name="android:minHeight">@dimen/height_element</item>
    </style>

    <style name="Row.White">
        <item name="android:textColor">#FFFFFFFF</item>
    </style>

    <style name="EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">@dimen/height_element_except_padding</item>
        <item name="android:textColor">@color/text_edit_text</item>
        <item name="android:background">@drawable/edittext</item>
        <item name="android:padding">8dp</item>
    </style>

    <style name="Bar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/height_element</item>
        <item name="android:minHeight">@dimen/height_element</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="TextInBar">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:padding">4dp</item>
        <item name="android:shadowColor">#99333333</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">-2</item>
        <item name="android:shadowRadius">4</item>
    </style>

    <style name="TextInBar.Light">
        <item name="android:textColor">#333333</item>
        <item name="android:shadowColor">#99999999</item>
    </style>

    <!-- Light Theme -->
    <style name="Theme.Sherlock.Styled.Light" parent="Theme.Sherlock.Light">
        <item name="actionBarStyle">@style/Widget.Styled.Light.ActionBar</item>
        <item name="android:actionBarStyle">@style/Widget.Styled.Light.ActionBar</item>
        <item name="android:buttonStyle">@style/Button.Light</item>
    </style>

    <style name="Widget.Styled.Light.ActionBar" parent="Widget.Sherlock.Light.ActionBar.Solid.Inverse">
        <item name="background">@drawable/bar_lightgray_gradient</item>
        <item name="android:background">@drawable/bar_lightgray_gradient</item>
        <item name="titleTextStyle">@style/Widget.Styled.Light.ActionBar.Title</item>
        <item name="android:titleTextStyle">@style/Widget.Styled.Light.ActionBar.Title</item>
    </style>

    <style name="Widget.Styled.Light.ActionBar.Title" parent="TextAppearance.Sherlock.Widget.ActionBar.Title">
        <item name="android:textColor">#333333</item>
    </style>

    <!-- Dark Theme -->
    <style name="Theme.Sherlock.Styled.Dark" parent="Theme.Sherlock">
        <item name="actionBarStyle">@style/Widget.Styled.Dark.ActionBar</item>
        <item name="android:actionBarStyle">@style/Widget.Styled.Dark.ActionBar</item>
        <item name="android:buttonStyle">@style/Button.Black</item>
    </style>

    <style name="Widget.Styled.Dark.ActionBar" parent="Widget.Sherlock.Light.ActionBar.Solid.Inverse">
        <item name="background">@drawable/bar_black_gradient</item>
        <item name="android:background">@drawable/bar_black_gradient</item>
        <item name="titleTextStyle">@style/Widget.Styled.Dark.ActionBar.Title</item>
        <item name="android:titleTextStyle">@style/Widget.Styled.Dark.ActionBar.Title</item>
    </style>

    <style name="Widget.Styled.Dark.ActionBar.Title" parent="TextAppearance.Sherlock.Widget.ActionBar.Title">
        <item name="android:textColor">#EEEEEE</item>
    </style>

    <style name="CustomViewIndicator">
        <item name="vi_radius">@dimen/custom_vi_radius</item>
        <item name="vi_distance">@dimen/custom_vi_distance</item>
    </style>

</resources>